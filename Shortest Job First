#include<stdio.h>
struct sjf
{
	int processno,arr_time,burst_time,wait_time,tar_time;
	
}process[100];

void main()
{
	int i,t=0,b_t=0,peak;
	int a[10],n;
	
	printf("Enter the number of process:");
	scanf("%d",&n);
	
	for(i=0;i<n;i++)
	{
		process[i].processno=i+1;
		printf("\nEnter details for Process %d process:",i+1);
		printf("\nEnter Arrival time: ");
		scanf("%d",&process[i].arr_time);
		printf("Enter Burst time: ");
		scanf("%d",&process[i].burst_time);
				
	}
	Sorting();
	
	
}

void Sorting()
{
	Struct process p;
	int i,j;
	for(i=0;i<n-1;i++)
	{
		for(j=i+1;j<n;j++)
		{
			if(process[i].arr_time>process[j].arr_time)
			{
				p=process[i];
				process[i]=process[j];
				process[j]=p;
			}
		}
	}
}

